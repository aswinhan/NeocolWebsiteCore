@{
    ViewData["Title"] = "Batch Type Curing Oven";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_NavBar" />

<div id="banner-area" class="banner-area">
    <img class="banner-area" src="~/img/banner/banner1.jpg">

    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">@ViewBag.Title</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a>Our Process</a></li>
                                <li class="breadcrumb-item"><a>Curing Ovens & Accessories</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div>

    <!-- Banner text end -->
</div><!-- Banner area end -->
<!-- Process Section -->
<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-xl-3 col-lg-4">
                <div class="sidebar sidebar-left">
                    <div class="widget">
                        <h3 class="widget-title">Curing Ovens & Accessories</h3>
                        <ul class="nav service-menu">
                            <li><a href="@Url.Action("ConvayorCuringOven","Home")">Conveyorised Curing Oven</a></li>
                            <li class="active"><a href="@Url.Action("BatchCuringOven","Home")">Batch Type Curing Oven</a></li>
                        </ul>
                    </div>

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-xl-8 col-lg-8">
                <div class="content-inner-page">

                    <h2 class="column-title mrt-0">Conveyorised Curing Oven</h2>

                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                Drying Ovens are provided to dry up the component after Pre-treatment process and Curing oven are provided to cure powder/paint on specific temperature to get a better finish and Increase quality of finish. These ovens are operated on various sources of heating, Like LPG Fired Heating system and Diesel Fired Heating System through Conventional Heating process and IR, UV Ovens through Radiation Heating Process.
                            </p>
                            <p>
                                The ovens are of the following type:<br/>
                                Belt (wire mesh/PVC) Conveyorized oven<br />
                                Batch type oven with ground mounted trolley & track<br />
                                Tray Driers & Pre- heating ovens<br />
                            </p>
                        </div><!-- col end -->
                    </div><!-- 1st row end-->

                    <div class="gap-40"></div>

                    <div id="page-slider" class="page-slider">
                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project1.jpg" alt="project-slider-image" />
                        </div>

                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project2.jpg" alt="project-slider-image" />
                        </div>
                    </div><!-- Page slider end -->

                    <div class="gap-40"></div>

                    <!--2nd row end -->
                </div><!-- Content inner end -->
            </div><!-- Content Col end -->


        </div><!-- Main row end -->
    </div><!-- Conatiner end -->
</section>

<partial name="_Footer" />

<!-- Process Section -->

@section Script{
    <!-- Slick Carousel -->
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/slick/slick-animation.min.js"></script>
    <script src="~/js/Slider.js"></script>
}




