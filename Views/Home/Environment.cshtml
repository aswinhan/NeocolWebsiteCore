
@{
    ViewData["Title"] = "Environment, Occupational Health and Safety Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_NavBar" />

<div id="banner-area" class="banner-area">
    <img class="banner-area" src="~/img/banner/banner1.jpg">

    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">@ViewBag.Title</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a>About Us</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div>

    <!-- Banner text end -->
</div><!-- Banner area end -->
<!-- Process Section -->
<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-xl-3 col-lg-4">
                <div class="sidebar sidebar-left">
                    <div class="widget">
                        <h3 class="widget-title">Environment, Occupational Health and Safety Policies</h3>
                        <ul class="nav service-menu">
                            <li ><a href="@Url.Action("Commitments","Home")">Our Commitments</a></li>
                            <li><a href="@Url.Action("Highlights","Home")">Highlights & Infrastructure</a></li>
                            <li class="active"><a href="@Url.Action("Environment","Home")">Environment & Safety</a></li>
                        </ul>
                    </div>

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-xl-8 col-lg-8">
                <div class="content-inner-page">

                    <h2 class="column-title mrt-0">Environment, Occupational Health and Safety Policies</h2>

                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                We Neocol is committed to protectivly manage and achieve excellence in Environment, Occupational Health and Safety(EHS) Practices.
                            </p>
                            <h5>This will be achived by our total commitment to</h5>
                            <ul class="list-arrow">
                                <li>Complying with nation specific regulatory standerds on environment, Occupational Health and Safety</li>
                                <li>Optimizing resource utilization for  protection of environ ment including pollution prevention, energy & water conservation and reduction of waste and emissions.</li>
                                <li>Penetrate workspace safty as an individual responsibility for all employees.</li>
                                <li>Ensure providing health, safty and healthy work environment for prevention of injury and ill health with necessary infrastructure and systems.</li>
                                <li>Reviewing EHS performance for continual improvement.</li>
                                <li>Promoting EHS awareness among our Employees.</li>
                                <li>Imparting traning to operating personnel.</li>
                            </ul>
                            <p>
                                The Company shall design and develop, process, handle, store and distribute its products in a manner that minimizes the risk to human being and environment to go beyond compliance in all aspect of EHS.
                            </p>
                        </div><!-- col end -->
                    </div><!-- 1st row end-->

                    <div class="gap-40"></div>

                    <div id="page-slider" class="page-slider">
                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project1.jpg" alt="project-slider-image" />
                        </div>

                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project2.jpg" alt="project-slider-image" />
                        </div>
                    </div><!-- Page slider end -->

                    <div class="gap-40"></div>

                    <!--2nd row end -->
                </div><!-- Content inner end -->
            </div><!-- Content Col end -->


        </div><!-- Main row end -->
    </div><!-- Conatiner end -->
</section>

<partial name="_Footer" />

<!-- Process Section -->

@section Script{
    <!-- Slick Carousel -->
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/slick/slick-animation.min.js"></script>
    <script src="~/js/Slider.js"></script>
}

