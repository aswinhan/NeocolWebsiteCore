
@{
    ViewData["Title"] = "Accessories for Paint Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_NavBar" />

<div id="banner-area" class="banner-area">
    <img class="banner-area" src="~/img/banner/banner1.jpg">

    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">@ViewBag.Title</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a>Our Process</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div>

    <!-- Banner text end -->
</div><!-- Banner area end -->
<!-- Process Section -->
<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-xl-3 col-lg-4">
                <div class="sidebar sidebar-left">
                    <div class="widget">
                        <h3 class="widget-title">Accessories for Paint Shop</h3>
                        <ul class="nav service-menu">
                            <li class="active"><a href="@Url.Action("PaintShop","Home")">Accessories for Paint Shop</a></li>
                        </ul>
                    </div>

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-xl-8 col-lg-8">
                <div class="content-inner-page">

                    <h2 class="column-title mrt-0">Accessories for Paint Shop</h2>

                    <div class="row">
                        <div class="col-md-12">
                            <h5>Fresh air supply unit</h5>
                            <p>
                                fresh air supply unit is provided for positive pressurization of painting/ powder coating booths so that foreing particles do not sttle down on components.
                            </p>
                        </div><!-- col end -->
                    </div><!-- 1st row end-->

                    <div class="row">
                        <div class="col-md-12">
                            <h5>Paint Kitchen Accessories</h5>
                            <p>
                                Paint Kitchen accessories are provided for liquid painting plants to feed the paints.
                            </p>
                        </div><!-- col end -->
                    </div><!-- 1st row end-->
                    <div class="row">
                        <div class="col-md-12">
                            <h5>Control panels</h5>
                            <p>
                                The control panel are very critical in paint shop. The operations, efficiency and safety of the paint shop depends on the control panel design. Neocol provides following types of panels.
                            </p>
                            <p>
                                Conventional type panel.<br/>
                                PLC touchscreen panel.<br />
                                SCADA based control panels.<br />
                            </p>
                        </div><!-- col end -->
                    </div><!-- 1st row end-->

                    <div class="gap-40"></div>

                    <div id="page-slider" class="page-slider">
                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project1.jpg" alt="project-slider-image" />
                        </div>

                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="~/img/projects/project2.jpg" alt="project-slider-image" />
                        </div>
                    </div><!-- Page slider end -->

                    <div class="gap-40"></div>

                    <!--2nd row end -->
                </div><!-- Content inner end -->
            </div><!-- Content Col end -->


        </div><!-- Main row end -->
    </div><!-- Conatiner end -->
</section>

<partial name="_Footer" />

<!-- Process Section -->

@section Script{
    <!-- Slick Carousel -->
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/slick/slick-animation.min.js"></script>
    <script src="~/js/Slider.js"></script>
}

